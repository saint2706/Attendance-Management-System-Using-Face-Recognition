# Django settings
DJANGO_DEBUG=1
DJANGO_SECRET_KEY=change-me
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DATA_ENCRYPTION_KEY=replace-with-generated-fernet-key
FACE_DATA_ENCRYPTION_KEY=replace-with-generated-fernet-key

# Database configuration
DATABASE_URL=postgresql://attendance:attendance@localhost:5432/attendance
DATABASE_CONN_MAX_AGE=60
DATABASE_SSL_REQUIRE=false

# Local docker-compose overrides
POSTGRES_DB=attendance
POSTGRES_USER=attendance
POSTGRES_PASSWORD=attendance
POSTGRES_PORT=5432

# Feature Profile Configuration
# Choose a profile: basic (minimal), standard (recommended), or advanced (all features)
# Default: advanced (all features enabled for backward compatibility)
FEATURE_PROFILE=standard

# Individual Feature Flags (override profile settings if needed)
# Basic profile: all disabled except core recognition
# Standard profile: liveness + encryption enabled, scheduled tasks disabled
# Advanced profile: all enabled

# Motion-based liveness detection (prevents photo spoofing)
#ENABLE_LIVENESS_DETECTION=true

# DeepFace built-in anti-spoofing (in addition to motion-based liveness)
#ENABLE_DEEPFACE_ANTISPOOFING=false

# Automated nightly model evaluations via Celery Beat
#ENABLE_SCHEDULED_EVALUATIONS=false

# Scheduled fairness audits via Celery Beat
#ENABLE_FAIRNESS_AUDITS=false

# Liveness detection evaluation pipeline
#ENABLE_LIVENESS_EVALUATIONS=false

# Silk performance profiling middleware
#ENABLE_PERFORMANCE_PROFILING=false

# Face data encryption at rest (recommended for production)
#ENABLE_ENCRYPTION=true

# Sentry error tracking and monitoring
#ENABLE_SENTRY=true

# Performance Optimization Settings
# Hardware Acceleration (Cascading Priority: NPU → GPU → CPU)

# NPU acceleration (requires Intel OpenVINO or DirectML on Windows)
#RECOGNITION_ENABLE_NPU=true
#RECOGNITION_OPENVINO_ENABLED=true
#RECOGNITION_DIRECTML_ENABLED=true

# GPU acceleration (requires TensorFlow GPU + CUDA/cuDNN)
#RECOGNITION_ENABLE_GPU=true

# Model selection (Facenet, VGG-Face, OpenFace, DeepFace, etc.)
# OpenFace is fastest on CPU but less accurate
# For NPU: can use OpenVINO IR models
#RECOGNITION_DEEPFACE_MODEL=Facenet
#RECOGNITION_LIGHTWEIGHT_MODEL=OpenFace
#RECOGNITION_NPU_MODEL=Facenet
#RECOGNITION_MODEL_FALLBACK_ENABLED=true

# Performance monitoring
#RECOGNITION_PERFORMANCE_LOGGING=true
#RECOGNITION_HARDWARE_PROFILING=true

# Async processing (opt-in for high-throughput scenarios)
#RECOGNITION_ENABLE_ASYNC_PROCESSING=false
#RECOGNITION_ASYNC_THRESHOLD=10

# Multi-Face Detection (for group check-ins)
# When enabled, system processes all faces in frame (up to max limit)
# When disabled (default), only one face processed for accountability
#RECOGNITION_MULTI_FACE_ENABLED=false
#RECOGNITION_MAX_FACES_PER_FRAME=5
#RECOGNITION_MULTI_FACE_MIN_SIZE=50


